<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic metadata for responsive design and character encoding -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - AgriEnergyConnect</title>

    <!-- External Stylesheets and Bootstrap for responsive design -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnectWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    
    <!-- Custom styles for the login page -->
    <style>
        /* Full height layout with background image */
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: url('/images/agriculture-login-bg.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        /* Centered card for the login form */
        .login-card {
            background-color: rgba(255, 255, 255, 0.97);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            margin: 100px auto;
        }

        /* Login title styling */
        .login-title {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: bold;
            color: #2e7d32;
        }

        /* Input field styling */
        .login-form input {
            width: 100%;
            padding: 12px 16px;
            margin-bottom: 20px;
            border-radius: 10px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        /* Styling for error message */
        .error-message {
            color: red;
            text-align: center;
            margin-top: 10px;
        }

        /* Wrapper to position toggle password icon */
        .password-wrapper {
            position: relative;
        }

        /* Toggle password eye icon styling */
        .toggle-password {
            position: absolute;
            top: 50%;
            right: 16px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #888;
        }

        /* Back to home button container */
        .back-button-container {
            text-align: center;
            margin-top: 20px;
        }

        /* Back link styling */
        .back-button-container a {
            color: #2e7d32;
            text-decoration: none;
            font-weight: bold;
            font-size: 15px;
        }

        /* Back link hover effect */
        .back-button-container a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Login form container -->
    <div class="login-card">
        <h2 class="login-title">Welcome Back</h2>

        <!-- Login form that posts credentials -->
        <form method="post" class="login-form">
            <input type="email" name="email" placeholder="Email" required />

            <!-- Password field with show/hide icon -->
            <div class="password-wrapper">
                <input type="password" id="password" name="password" placeholder="Password" required />
                <i class="fa-solid fa-eye toggle-password" id="togglePassword"></i>
            </div>

            <button type="submit">Login</button>

            <!-- Displays error if ViewBag.Error is set -->
            @if (ViewBag.Error != null)
            {
                <p class="error-message">@ViewBag.Error</p>
            }
        </form>

        <!-- Back to home link -->
        <div class="back-button-container">
            <a href="@Url.Action("Index", "Home")">← Back to Home</a>
        </div>
    </div>

    <!-- JavaScript libraries and custom script for toggling password visibility -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Toggle password visibility when eye icon is clicked
        document.addEventListener("DOMContentLoaded", function () {
            const togglePassword = document.getElementById("togglePassword");
            const passwordInput = document.getElementById("password");

            togglePassword.addEventListener("click", function () {
                const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
                passwordInput.setAttribute("type", type);

                // Toggle icon style
                this.classList.toggle("fa-eye");
                this.classList.toggle("fa-eye-slash");
            });
        });
    </script>
</body>
</html>
